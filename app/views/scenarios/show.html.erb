<div id="notice" class="alert alert-success"><%= notice %></div>

<h1><%= @scenario.name %></h1>
<%= link_to 'Edit', edit_scenario_path(@scenario) %> |
<%= link_to 'Back', scenarios_path %>

<% @scenario.pixes.each do |pix| %>
  <%= render 'pixes/view', pix: pix %>
<% end %>

<div id="new-pix">
  <%= form_with model: Pix.new do |f| %>
    <%= f.hidden_field :scenario_id, value: @scenario.id %>
    <div class="form-row">
      <div class="col-3">
        <%= f.collection_select :character_id, Character.all, :id, :display_name, {}, class: 'form-control' %>
      </div>
      <div class="col-8">
        <%= f.text_field :msg, class: 'form-control' %>
      </div>
      <div class="col-1">
        <%= f.submit 'Post', type: 'submit', class: 'btn btn-outline-dark' %>
      </div>
    </div>
  <% end %>
</div>